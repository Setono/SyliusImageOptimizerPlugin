{
    "name": "setono/sylius-optimize-images-plugin",
    "type": "sylius-plugin",
    "description": "Sylius plugin that optimizes your images",
    "license": "MIT",
    "require": {
        "php": "^7.2",

        "sylius/sylius": "^1.3"
    },
    "require-dev": {
        "behat/behat": "^3.4",
        "behat/mink": "^1.7@dev",
        "behat/mink-browserkit-driver": "^1.3",
        "behat/mink-extension": "^2.2",
        "behat/mink-selenium2-driver": "^1.3",
        "ergebnis/composer-normalize": "^2.0",
        "friends-of-behat/page-object-extension": "^0.3",
        "friends-of-behat/suite-settings-extension": "^1.0",
        "friends-of-behat/symfony-extension": "^2.0",
        "friends-of-behat/variadic-extension": "^1.1",
        "kalessil/production-dependencies-guard": "dev-master",
        "korbeil/phpstan-generic-rules": "^0.2.2",
        "lakion/mink-debug-extension": "^1.2.3",
        "phpspec/phpspec": "^5.1 || ^6.0",
        "phpstan/phpstan": "^0.12",
        "phpstan/phpstan-doctrine": "^0.12",
        "phpstan/phpstan-strict-rules": "^0.12",
        "phpstan/phpstan-webmozart-assert": "^0.12",
        "phpunit/phpunit": "^8.5",
        "roave/security-advisories": "dev-master",
        "sylius-labs/coding-standard": "^3.1",
        "symfony/browser-kit": "^3.4 || ^4.1 || ^5.0",
        "symfony/debug-bundle": "^3.4 || ^4.1 || ^5.0",
        "symfony/dotenv": "^4.2 || ^5.0",
        "symfony/web-profiler-bundle": "^3.4 || ^4.1 || ^5.0",
        "symfony/web-server-bundle": "^3.4 || ^4.1 || ^5.0",
        "thecodingmachine/phpstan-safe-rule": "^1.0@beta"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Setono\\SyliusOptimizeImagesPlugin\\": "src/",
            "Tests\\Setono\\SyliusOptimizeImagesPlugin\\": "tests/"
        }
    },
    "autoload-dev": {
        "classmap": ["tests/Application/Kernel.php"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse -c phpstan.neon -l max src",
        "check-style": "vendor/bin/ecs check src/ spec/ tests/",
        "fix-style": "vendor/bin/ecs check src/ spec/ tests/ --fix",
        "phpspec": "vendor/bin/phpspec run -vvv",
        "phpunit": "vendor/bin/phpunit",
        "tests": [
            "@phpspec",
            "@phpunit"
        ]
    }
}
