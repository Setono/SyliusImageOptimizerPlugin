{
    "name": "setono/sylius-image-optimizer-plugin",
    "type": "sylius-plugin",
    "description": "Sylius plugin that optimizes your images",
    "license": "MIT",
    "require": {
        "php": "^7.3",
        "ext-mbstring": "*",
        "doctrine/common": "^2.13",
        "doctrine/event-manager": "^1.1",
        "doctrine/orm": "^2.7",
        "doctrine/persistence": "^1.3",
        "knplabs/knp-menu": "^3.1",
        "liip/imagine-bundle": "^2.3",
        "psr/log": "^1.1",
        "setono/doctrine-orm-batcher": "^0.6",
        "setono/doctrine-orm-batcher-bundle": "^0.3.1",
        "setono/kraken-io-bundle": "^1.0",
        "setono/kraken-io-php-sdk": "^1.0",
        "sylius/core": "^1.0",
        "sylius/resource-bundle": "^1.0",
        "sylius/ui-bundle": "^1.0",
        "symfony/config": "^4.4 || ^5.0",
        "symfony/console": "^4.4 || ^5.0",
        "symfony/dependency-injection": "^4.4 || ^5.0",
        "symfony/event-dispatcher": "^4.4 || ^5.0",
        "symfony/http-client-contracts": "^2.3",
        "symfony/http-foundation": "^4.4 || ^5.0",
        "symfony/messenger": "^4.4 || ^5.0",
        "symfony/mime": "^5.0",
        "symfony/routing": "^4.4 || ^5.0",
        "thecodingmachine/safe": "^1.0",
        "twig/twig": "^2.14",
        "webimpress/safe-writer": "^2.0"
    },
    "require-dev": {
        "kriswallsmith/buzz": "^1.0",
        "matthiasnoback/symfony-config-test": "^4.1",
        "matthiasnoback/symfony-dependency-injection-test": "^4.1",
        "nyholm/psr7": "^1.2",
        "phpspec/phpspec": "^6.2",
        "phpunit/phpunit": "^8.5 || ^9.3",
        "roave/security-advisories": "dev-master",
        "setono/code-quality-pack": "^1.4",
        "sylius/sylius": "~1.7.0",
        "symfony/debug-bundle": "^4.4 || ^5.0",
        "symfony/dotenv": "^4.4 || ^5.0",
        "symfony/http-client": "^5.0",
        "symfony/web-profiler-bundle": "^5.0.11"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "autoload": {
        "psr-4": {
            "Setono\\SyliusImageOptimizerPlugin\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\Setono\\SyliusImageOptimizerPlugin\\": "tests/"
        },
        "classmap": [
            "tests/Application/Kernel.php"
        ]
    },
    "prefer-stable": true,
    "scripts": {
        "analyse": "vendor/bin/phpstan analyse -c phpstan.neon -l max src",
        "check-style": "vendor/bin/ecs check src/ tests/",
        "fix-style": "vendor/bin/ecs check src/ tests/ --fix",
        "phpspec": "vendor/bin/phpspec run -vvv",
        "phpunit": "vendor/bin/phpunit",
        "tests": [
            "@phpspec",
            "@phpunit"
        ]
    }
}
