{
    "name": "loevgaard/sylius-optimize-images-plugin",
    "type": "sylius-plugin",
    "description": "Sylius plugin that optimizes your images",
    "license": "MIT",
    "minimum-stability": "dev",
    "require": {
        "php": "^7.1",

        "sylius/sylius": "~1.2.3",
        "symfony/symfony": "^3.4|^4.1",
        "setono/tiny-png-bundle": "^1.0.3"
    },
    "require-dev": {
        "behat/behat": "^3.4",
        "behat/mink": "^1.7@dev",
        "behat/mink-browserkit-driver": "^1.3",
        "behat/mink-extension": "^2.2",
        "behat/mink-selenium2-driver": "^1.3",
        "enqueue/enqueue-bundle": "^0.8.35",
        "enqueue/fs": "^0.8.24",
        "friends-of-behat/context-service-extension": "^1.2",
        "friends-of-behat/cross-container-extension": "^1.1",
        "friends-of-behat/service-container-extension": "^1.0",
        "friends-of-behat/symfony-extension": "^1.2.1",
        "friends-of-behat/variadic-extension": "^1.1",
        "lakion/mink-debug-extension": "^1.2.3",
        "phpspec/phpspec": "^4.0",
        "phpstan/phpstan-doctrine": "^0.10",
        "phpstan/phpstan-shim": "^0.10",
        "phpstan/phpstan-symfony": "^0.10",
        "phpstan/phpstan-webmozart-assert": "^0.10",
        "phpunit/phpunit": "^6.5",
        "sylius-labs/coding-standard": "^2.0"
    },
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Loevgaard\\SyliusOptimizeImagesPlugin\\": "src/",
            "Tests\\Loevgaard\\SyliusOptimizeImagesPlugin\\": "tests/"
        }
    },
    "autoload-dev": {
        "classmap": ["tests/Application/app/AppKernel.php"]
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "scripts": {
        "test": "./bin/phpunit",
        "check-style": "./bin/ecs check src",
        "fix-style": "./bin/ecs check src --fix",
        "analyse": "./bin/phpstan.phar analyse -c phpstan.neon -l max src/"
    }
}
