<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xmlns="http://symfony.com/schema/dic/services"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="setono_sylius_image_optimizer.factory.image_file"
                 class="Setono\SyliusImageOptimizerPlugin\Factory\ImageFileFactory"/>

        <!-- todo remember to do this in the extension or compiler pass instead of here -->
        <service id="setono_sylius_image_optimizer.factory.ngrok_aware_image_file"
                 decorates="setono_sylius_image_optimizer.factory.image_file"
                 class="Setono\SyliusImageOptimizerPlugin\Factory\NgrokAwareImageFileFactory">
