<?xml version="1.0" encoding="UTF-8" ?>

<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="loevgaard.sylius_optimize_images.provider.tiny_png" class="Loevgaard\SyliusOptimizeImagesPlugin\Provider\TinyPngProvider" />
        <service id="loevgaard.sylius_optimize_images.resolver.path" class="Loevgaard\SyliusOptimizeImagesPlugin\Resolver\PathResolver">
            <argument>%liip_imagine.resolvers%</argument>
        </service>
        <service id="loevgaard.sylius_optimize_images.optimizer.product_image" class="Loevgaard\SyliusOptimizeImagesPlugin\Optimizer\ProductImageOptimizer">
            <argument type="service" id="loevgaard.sylius_optimize_images.provider.tiny_png" />
            <argument type="service" id="sylius.repository.product" />
            <argument type="service" id="liip_imagine.filter.configuration" />
            <argument type="service" id="loevgaard.sylius_optimize_images.resolver.path" />

            <tag name="loevgaard.sylius_optimize_images.optimizer" />
        </service>
    </services>
</container>
